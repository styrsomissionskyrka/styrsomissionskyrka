{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wp-types/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/wp-types",
        "main": "libs/wp-types/src/index.ts",
        "tsConfig": "libs/wp-types/tsconfig.lib.json",
        "assets": ["libs/wp-types/*.md"]
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "outputs": ["libs/wp-types/generated"],
      "options": {
        "command": "node -r esbuild-register scripts/generate-api.ts",
        "cwd": "libs/wp-types"
      },
      "configurations": {
        "production": {
          "url": "http://localhost:8888"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/wp-types/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/wp-types"],
      "options": {
        "jestConfig": "libs/wp-types/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
